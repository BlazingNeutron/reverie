{
  "name": "reverie-notes",
  "version": "0.0.1",
  "description": "Note taking app for all of your dreamy, thoughtful, deep thinking and shared ideas.",
  "scripts": {
    "build": "turbo run build",
    "check:licenses": "node scripts/check-licenses.cjs",
    "dev": "turbo run dev",
    "test": "turbo run test",
    "test:coverage": "turbo run test:coverage",
    "test:updateSnapshots": "turbo run test:updateSnapshots",
    "db:reset": "turbo run db:reset",
    "db:migrate": "turbo run db:migrate"
  },
  "dependencies": {
    "concurrently": "^9.2.1"
  },
  "workspaces": [
    "apps/*"
  ],
  "type": "module",
  "packageManager": "npm@11.4.2",
  "devDependencies": {
    "jsdom": "^27.4.0",
    "turbo": "^2.7.6",
    "vitest": "^4.0.18"
  }
