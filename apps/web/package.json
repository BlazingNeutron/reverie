{
  "name": "@repo/reverie-notes-web-app",
  "version": "0.0.1",
  "description": "Note taking app for all of your dreamy, thoughtful, deep thinking and shared ideas.",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "db:reset": "export $(cat .env | grep \"^[^#;]\" |xargs) && supabase db reset --yes --db-url $SUPABASE_DB_URL",
    "db:migrate": "supabase migration new migration_name",
    "test": "vitest",
    "test:run": "vitest run",
    "test:watch": "vitest --watch",
    "test:coverage": "vitest run --coverage"
  },
  "devDependencies": {
    "@tailwindcss/postcss": "^4.1.18",
    "@testing-library/user-event": "^14.6.1",
