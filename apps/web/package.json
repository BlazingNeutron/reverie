    "react-dom": "^19.2.3",
    "react-router": "^7.11.0",
    "tailwind-merge": "^3.4.0",
    "tailwindcss-animate": "^1.0.7",
    "y-quill": "^1.0.0",
    "yjs": "^13.6.29",
    "zustand": "^5.0.9"
  }
